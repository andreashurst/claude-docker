{
  "enforcement": {
    "never_rules": true,
    "abort_on_violation": true,
    "log_violations": true,
    "strict_mode": false
  },
  "permissions": {
    "deny": [
      "Bash(git:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(apt-get:*)",
      "Bash(apt:*)",
      "Bash(dpkg:*)",
      "Bash(yum:*)",
      "Bash(brew:*)"
    ],
    "allow": []
  },
  "paths": {
      "forbidden_writes": [
        "/var/www/html/**",
        "/var/www/html/.git/**",
        "/var/www/html/vendor/**",
        "/var/www/html/node_modules/**",
        "/var/www/html/public/typo3/**",
        "/var/www/html/config/**",
        "/var/www/html/var/**",
        "/etc/**",
        "/usr/**",
        "/bin/**",
        "/root/**",
        "/var/www/html/.claude/settings.local.json",
        "/var/www/html/*.lock",
        "/var/www/html/composer.json",
        "/var/www/html/package.json"
      ]
  },
  "validation": {
    "check_before_execute": true,
    "check_before_write": true
  }
}
