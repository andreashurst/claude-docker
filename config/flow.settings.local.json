{
  "enforcement": {
    "never_rules": true,
    "abort_on_violation": true,
    "log_violations": true,
    "strict_mode": true
  },
  "permissions": {
    "deny": [
      "Bash(git:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(apt-get:*)",
      "Bash(apt:*)",
      "Bash(dpkg:*)",
      "Bash(yum:*)",
      "Bash(brew:*)"
    ],
    "allow": []
  },
  "paths": {
    "allowed_writes": [
      "/var/www/html/packages/**",
      "/var/www/html/playwright/**",
      "/var/www/html/docs/**",
      "/tmp/**"
    ],
    "forbidden_writes": [
      "/var/www/html/**",
      "/var/www/html/.git/**",
      "/var/www/html/vendor/**",
      "/var/www/html/node_modules/**",
      "/var/www/html/public/typo3/**",
      "/var/www/html/config/**",
      "/var/www/html/var/**",
      "/etc/**",
      "/usr/**",
      "/bin/**",
      "/root/**",
      "/var/www/html/claude/.claude/settings.local.json",
      "/var/www/html/*.lock",
      "/var/www/html/composer.json",
      "/var/www/html/package.json"
    ]
  },
  "playwright": {
    "enabled": true,
    "test_directory": "/var/www/html/playwright",
    "output_directory": "/var/www/html/playwright/test-results",
    "screenshot_directory": "/var/www/html/playwright/screenshots",
    "commands": {
      "screenshot": "playwright screenshot",
      "pdf": "playwright pdf",
      "test": "playwright test",
      "test_ui": "playwright test --ui",
      "test_debug": "playwright test --debug",
      "show_report": "playwright show-report"
    },
    "browsers": ["chromium", "firefox", "webkit"],
    "devices": ["iPhone 12", "iPad Pro", "Pixel 5"],
    "viewports": {
      "desktop": "1920,1080",
      "tablet": "768,1024",
      "mobile": "375,667"
    },
    "urls": {
      "local": "http://host.docker.internal"
    }
  },
  "validation": {
    "check_before_execute": true,
    "check_before_write": true
  }
}
