{
  "enforcement": {
    "never_rules": true,
    "abort_on_violation": true,
    "log_violations": true,
    "strict_mode": false
  },
  "permissions": {
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf /*)",
      "Bash(chmod 777:*)",
      "Bash(chown root:*)",
      "Bash(systemctl:*)",
      "Bash(apt-get:*)",
      "Bash(apt:*)",
      "Bash(apk add:*)"
    ],
    "allow": [
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(npx:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(test:*)",
      "Bash(make:*)",
      "Bash(playwright:*)",
      "Bash(deno:*)",
      "Bash(python3:*)",
      "Bash(pip3:*)",
      "Bash(claude-flow:*)"
    ]
  },
  "paths": {
    "forbidden_writes": [
      "/etc/**",
      "/usr/**",
      "/bin/**",
      "/root/**",
      "/home/claude/.claude/settings.local.json"
    ]
  },
  "validation": {
    "check_before_execute": true,
    "check_before_write": true
  },
  "claude-flow": {
    "environment": "flow",
    "description": "Claude Flow Container Settings",
    "features": {
      "claude-code": true,
      "claude-flow": true,
      "mcp-servers": true,
      "playwright": true,
      "deno": true,
      "python": true
    },
    "paths": {
      "project": "/var/www/html",
      "config": "/home/claude/.claude",
      "playwright_browsers": "/home/claude/.cache/ms-playwright",
      "deno_install": "/home/claude/.deno"
    },
    "network": {
      "host": "host.docker.internal",
      "frontend_url": "${FRONTEND_URL}"
    },
    "mcp_servers": [
      "@playwright/mcp",
      "@modelcontextprotocol/server-filesystem",
      "mcp-server-git"
    ]
  }
}