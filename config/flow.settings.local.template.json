{
  "enforcement": {
    "never_rules": true,
    "abort_on_violation": true,
    "log_violations": true,
    "strict_mode": true
  },
  "permissions": {
    "deny": [
      "Bash(git:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(systemctl:*)",
      "Bash(apt-get:*)",
      "Bash(apt:*)",
      "Bash(dpkg:*)",
      "Bash(yum:*)",
      "Bash(brew:*)"
    ],
    "allow": [
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(find:*)",
      "Bash(npx:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(curl:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(playwright:*)",
      "Bash(screenshot:*)",
      "Bash(deno:*)",
      "Bash(python3:*)",
      "Bash(pip3:*)",
      "Bash(test-port:*)",
      "Bash(test-host-connectivity:*)"
    ]
  },
  "paths": {
    "allowed_writes": [
      "/var/www/html/.claude/**",
      "/tmp/**"
    ],
    "forbidden_writes": [
      "/var/www/html/.git/**",
      "/var/www/html/vendor/**",
      "/var/www/html/node_modules/**",
      "/var/www/html/public/typo3/**",
      "/var/www/html/config/**",
      "/var/www/html/var/**",
      "/etc/**",
      "/usr/**",
      "/bin/**",
      "/root/**",
      "/home/claude/.claude/settings.local.json",
      "/var/www/html/*.lock",
      "/var/www/html/composer.json",
      "/var/www/html/package.json"
    ]
  },
  "playwright": {
    "enabled": true,
    "test_directory": "/var/www/html/playwright",
    "output_directory": "/var/www/html/playwright/test-results",
    "screenshot_directory": "/var/www/html/playwright/screenshots",
    "commands": {
      "screenshot": "playwright screenshot",
      "pdf": "playwright pdf",
      "test": "playwright test",
      "test_ui": "playwright test --ui",
      "test_debug": "playwright test --debug",
      "show_report": "playwright show-report"
    },
    "browsers": ["chromium", "firefox", "webkit"],
    "devices": ["iPhone 12", "iPad Pro", "Pixel 5"],
    "viewports": {
      "desktop": "1920,1080",
      "tablet": "768,1024",
      "mobile": "375,667"
    },
    "urls": {
      "local": "http://localhost"
    }
  },
  "validation": {
    "check_before_execute": true,
    "check_before_write": true,
    "reject_on_violation": true,
    "log_all_attempts": true
  }
}