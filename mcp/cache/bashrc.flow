# Claude Flow Environment
PS1='\[\033[31m\]claude@flow\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

export PATH="/var/www/html/bin:/home/claude/.deno/bin:/usr/local/bin:$PATH"
export NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"
export PLAYWRIGHT_BROWSERS_PATH="/opt/playwright-browsers"

alias ll='ls -la'
alias ..='cd ..'
alias ...='cd ../..'
alias apt='echo "Use the host system for APT package management" && false'
alias commit='git-commit-ai'
alias mcp='mcp-status'
alias gs='git status'
alias gd='git diff'
alias gl='git log --oneline -10'
alias gb='git branch'
alias gf='git fetch'
alias health='claude-health'
alias pw='playwright'
alias pwt='playwright test'
alias pwc='playwright codegen'
alias pws='playwright show-report'

# Auto-start claude
if [ -t 1 ]; then
    if command -v claude >/dev/null 2>&1; then
        claude
    else
        echo "Run 'claude auth login' to get started"
    fi
fi
