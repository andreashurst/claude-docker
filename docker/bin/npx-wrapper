#!/bin/bash

# npx wrapper that redirects "npx playwright" to "playwright"
# This ensures compatibility when users/scripts use "npx playwright" commands

# Store path to real npx
REAL_NPX=$(which -a npx | grep -v "$0" | head -n1)

# Check if first argument is "playwright"
if [[ "$1" == "playwright" ]]; then
  # Redirect to global playwright command
  shift  # Remove "playwright" from arguments
  exec playwright "$@"
else
  # Pass through to real npx for all other commands
  exec "$REAL_NPX" "$@"
fi
